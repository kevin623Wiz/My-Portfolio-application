<div class = "form-container">

  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-box" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-box" %>
    </div>

    <div class="form-login">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <div class = "form-link">
    <%= render "users/shared/links" %>
  </div>

</div>
